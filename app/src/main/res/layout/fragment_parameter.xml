<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <View
            android:id="@+id/white_background_parameter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/statistics_graph_parameter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_button_parameter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_selectable_up_button"
            android:padding="16dp"
            android:src="@drawable/ic_back_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <TextView
            android:id="@+id/date_picker_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_dark_blue_hollow"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:minWidth="88dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/end_guide_parameter"
            app:layout_constraintTop_toBottomOf="@id/statistics_graph_parameter"
            tools:text="@string/mar_11_to_apr_5" />

        <tech.codevil.tracne.ui.statistics.ParameterGraphView
            android:id="@+id/statistics_graph_parameter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:paddingVertical="32dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button_parameter" />

        <include
            android:id="@+id/parameter1_card_fragment_parameter"
            layout="@layout/view_layout_card_parameter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/parameter2_card_fragment_parameter"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/start_guide_parameter"
            app:layout_constraintTop_toBottomOf="@id/date_picker_parameter" />

        <include
            android:id="@+id/parameter2_card_fragment_parameter"
            layout="@layout/view_layout_card_parameter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@id/end_guide_parameter"
            app:layout_constraintStart_toEndOf="@id/parameter1_card_fragment_parameter"
            app:layout_constraintTop_toTopOf="@id/parameter1_card_fragment_parameter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/data_recycler_view_parameter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/end_guide_parameter"
            app:layout_constraintStart_toStartOf="@id/start_guide_parameter"
            app:layout_constraintTop_toBottomOf="@id/parameter1_card_fragment_parameter"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/view_holder_data"
            tools:paddingEnd="16dp"
            tools:paddingStart="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>