<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghost_white"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="72dp">

            <ImageView
                android:id="@+id/back_button_journal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_selectable_up_button"
                android:padding="16dp"
                android:src="@drawable/ic_back_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guide_journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guide_journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <TextView
                android:id="@+id/date_journal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/charcoal"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="@id/end_guide_journal"
                app:layout_constraintStart_toStartOf="@id/start_guide_journal"
                app:layout_constraintTop_toBottomOf="@id/back_button_journal"
                tools:text="March 11" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_journal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/date_journal"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/end_guide_journal"
                app:layout_constraintTop_toTopOf="@id/date_journal"
                app:srcCompat="@drawable/ic_pencil"
                app:tint="@color/charcoal" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/templates_container_journal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                app:layout_constraintEnd_toEndOf="@id/end_guide_journal"
                app:layout_constraintStart_toStartOf="@id/start_guide_journal"
                app:layout_constraintTop_toBottomOf="@id/date_journal" />

            <View
                android:id="@+id/templates_blocker_journal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@id/templates_container_journal"
                app:layout_constraintEnd_toEndOf="@id/templates_container_journal"
                app:layout_constraintStart_toStartOf="@id/templates_container_journal"
                app:layout_constraintTop_toTopOf="@id/templates_container_journal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/fading_edge_journal"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:background="@drawable/bg_fading_edge_ghost_white"
        android:clickable="true"
        android:layerType="software"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submit_button_journal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_rounded_dark_blue"
        android:elevation="4dp"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/add_entry"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
