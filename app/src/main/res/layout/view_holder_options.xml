<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/ghost_white">

    <ImageView
        android:id="@+id/calendar_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_options"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toStartOf="@id/templates_options"
        app:layout_constraintStart_toEndOf="@id/calendar_options"
        app:layout_constraintTop_toTopOf="@id/calendar_options" />

    <ImageView
        android:id="@+id/templates_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toStartOf="@id/about_options"
        app:layout_constraintStart_toEndOf="@id/user_options"
        app:layout_constraintTop_toTopOf="@id/calendar_options" />

    <ImageView
        android:id="@+id/about_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/templates_options"
        app:layout_constraintTop_toTopOf="@id/calendar_options" />

</androidx.constraintlayout.widget.ConstraintLayout>