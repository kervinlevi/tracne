<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/question_yes_no_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/charcoal"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Did you exercise today?" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/radio_group_yes_no_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_yes_no_template"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/positive_radio_yes_no_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/open_sans"
            android:minWidth="80dp"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textColor="@color/chip_text"
            android:textSize="16sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@color/chip_bg"
            app:chipSurfaceColor="@color/transparent"
            app:chipEndPadding="16dp"
            app:chipMinHeight="48dp"
            app:chipStartPadding="16dp"
            app:chipStrokeColor="@color/charcoal"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/negative_radio_yes_no_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:checkable="true"
            android:fontFamily="@font/open_sans"
            android:minWidth="80dp"
            android:text="@string/no"
            android:textAlignment="center"
            android:textColor="@color/chip_text"
            android:textSize="16sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@color/chip_bg"
            app:chipSurfaceColor="@color/transparent"
            app:chipEndPadding="16dp"
            app:chipMinHeight="48dp"
            app:chipStartPadding="16dp"
            app:chipStrokeColor="@color/charcoal"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/error_text_yes_no_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/pastel_red"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_yes_no_template"
        tools:text="Required field."
        tools:visibility="visible" />

</merge>